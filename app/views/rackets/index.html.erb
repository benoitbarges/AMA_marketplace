<div class="container">
  <div class='d-flex justify-content-between mt-2 mb-2'>
    <h1>All rackets</h1>
    <%= link_to 'Add a new racket', new_racket_path, class:'btn btn-primary'  %>

  </div>
  <div class="row justify-content-center">
      <div class="card-racket-container">
        <% @rackets.each do |racket| %>
          <div class="card-racket">
            <% if racket.photo.attached? %>
              <%= cl_image_tag racket.photo.key, height: 300, width: 400, crop: :fill, alt: "alttext" %>
            <% end %>
            <div class="card-racket-infos">
              <div>
                <h2><%= racket.model %></h2>
                <%= link_to racket_path(racket), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_racket"></i>
                <% end %>
                <p><i class="fas fa-map-marker-alt"></i> <%= racket.location %></p>

                <h2 class="card-racket-pricing"><%= racket.price %>â‚¬</h2>
                <%= link_to edit_racket_path(racket.id), class: 'pull-right btn btn-default' do %>
                  <i class="fa fa-pencil"></i> Edit this racket
              <% end %>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


