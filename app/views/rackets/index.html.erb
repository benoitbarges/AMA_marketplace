<div class="container">
  <h1><strong>AMA</strong> Enjoy playing anytime, anywhere!</h1>
  <p>Stop thinking of wheter or not you should bring your tennis racket with you.
    Anywhere you go, AMA is here to provide you the best rackets nearby!</p>
  <%= link_to 'Add a new racket', new_racket_path, class:'btn btn-primary'  %>
</div>
<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
</div>

  <div class="row justify-content-center mb-2 mt-2">
    <div class="card-racket-container">
      <% @rackets.each do |racket| %>
        <div class="card-racket">
          <% if racket.photo.attached? %>
            <%= cl_image_tag racket.photo.key, height: 300, width: 400, crop: :fill, alt: "alttext" %>
          <% end %>
          <div class="card-racket-infos">
            <div>
              <h2><%= racket.model %></h2>
              <%= link_to racket_path(racket), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_racket"></i>
              <% end %>
              <p><i class="fas fa-map-marker-alt"></i> <%= racket.location %></p>
              <h2 class="card-racket-pricing"><%= racket.price %>â‚¬</h2>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


