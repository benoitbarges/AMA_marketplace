<div class="container">
  <div class='d-flex justify-content-between mt-2 mb-2'>
    <h1>All rackets</h1>
    <%= link_to 'Add a new racket', new_racket_path, class:'btn btn-primary'  %>
  </div>
  <div class="row justify-content-center">
      <div class="card-racket-container">
        <% @rackets.each do |racket| %>
          <div class="card-racket">
            <img src="https://images.unsplash.com/photo-1558594187-6ac6484bf5d4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1334&q=80" />
            <div class="card-racket-infos">
              <div>
                <h2><%= racket.model %></h2>
                <p><i class="fas fa-map-marker-alt"></i> <%= racket.location %></p>
                <h2 class="card-racket-pricing"><%= racket.price %>â‚¬</h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


